{
  "build": {
    "beforeDevCommand": "trunk serve",
    "beforeBuildCommand": "trunk build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "personal-assistant",
    "version": "0.0.2"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "open": true,
        "message": true,
        "ask": true,
        "confirm": true
      },
      "os": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "ai.lbk.assistant",
      "copyright": "Â© 2023 Lablack Mourad",
      "category": "DeveloperTool",
      "targets": "all",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "center": true,
        "visible": true,
        "title": "Personal Assistant",
        "width": 600,
        "height": 900,
        "minWidth": 600,
        "minHeight": 800
      }
    ],
    "updater": {
      "active": true,
      "endpoints": [
        "https://gist.githubusercontent.com/Mouradost/a398399a40d6b53b0b1acb30734e9777/raw/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IENBRDM0QUFFOTlFRjRGN0YKUldSL1QrK1pya3JUeWh6ZE1HNXJpcnBDalhuVGV3K0RnSklVaDBBK2lCZ3V6U0o4ZU1WSHdsWHQK"
    }
  }
}
